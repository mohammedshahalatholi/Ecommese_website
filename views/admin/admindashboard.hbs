<section>

    <div class="container p-3">
        
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Name of Product</th>
                    <th scope="col">catogary</th>
                    <th scope="col">price</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each product}}
                <tr>
                    <th scope="row">*</th>
                <td>{{this.name}}</td>
                    <td>{{this.content}}</td>
                    <td>{{this.catogary}}</td>
                    <td><img style="width: 50px;height: 50px;" src="/product-image/{{this._id}}.jpg"></td>
                    {{/each}}

            </tbody>
        </table>
    </div>
</section>