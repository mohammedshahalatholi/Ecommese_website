<section>
  <center><h3>
        Select your shop
  </h3></center>
  
    <div class="container p-3">
      
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Name of Supermarket</th>
      <th scope="col">Place of market</th>
      <th scope="col">Number</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each shop}}
    <tr>
      <th scope="row">*</th>
      <td>{{this.name}}</td>
      <td>{{this.content}}</td>
      <td>{{this.catogary}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-image/{{this._id}}.jpg"></td>
      <td><a href="/viewproduct/{{this._id}}" class="btn btn-primary">Select Super Marke</a>
        {{!-- <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are want to delete {{this.name}}? ')">Delete</a></td> --}}
    </tr>
   
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>